@page
@model Greenfield.Web.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container p-3 bg-light bg-opacity-50">
    <h1>Reservation Details</h1>
    <hr />
    <div class="row">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reservation.Property)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reservation.Property.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reservation.Client)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reservation.Client.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reservation.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reservation.Date)
            </dd>
       </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Reservation.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
